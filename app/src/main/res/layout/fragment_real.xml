                         android:textColor="@color/white"
                         android:textSize="15sp" />-->

                    <TextView
                        android:id="@+id/progressBar_o3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textIsSelectable="true"
                        android:layout_below="@+id/pollute_o3_nr_txt"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingRight="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/pollute_no2_value_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/progressBar_no2"
                            android:layout_alignBaseline="@+id/pollute_no2_nr_txt"
                            android:layout_alignParentRight="true"
                            android:text="@string/pollute_no2_number"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="μg/m3"
                            android:textSize="10sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pollute_no2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/pollute_no2"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_pollute_no2_color"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pullent_real_six"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/pollute_no2_six_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_air_quantity"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <!-- <TextView
                         android:id="@+id/pollute_no2_nr_txt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_below="@+id/pollute_no2_txt"
                         android:text="@string/pollute_no2_text"
                         android:textColor="@color/white"
                         android:textSize="15sp" />-->

                    <TextView
                        android:textIsSelectable="true"
                        android:id="@+id/progressBar_no2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/pollute_no2_nr_txt"
                        android:layout_marginTop="5dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/pollute_so2_value_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/progressBar_so2"
                            android:layout_alignBaseline="@+id/pollute_so2_nr_txt"
                            android:layout_alignParentRight="true"
                            android:text="@string/pollute_so_number_a"
                            android:textColor="@color/white"
                            android:textSize="30sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="μg/m3"
                            android:textSize="10sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pollute_so2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/pollute_so"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_pollute_so2_color"
                        android:layout_width="60dp"

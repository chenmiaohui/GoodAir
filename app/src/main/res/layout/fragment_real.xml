                            android:layout_height="wrap_content"
                            android:layout_above="@+id/progressBar_pm10"
                            android:layout_alignBaseline="@+id/pollute_pm10_nr_txt"
                            android:layout_alignParentRight="true"
                            android:text="@string/pollute_pm10_text"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="μg/m3"
                            android:textSize="10sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pollute_pm10_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/pollute_pm10"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_pollute_pm10_color"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pullent_real_six"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/pollute_pm10_six_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_air_quantity"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <!--  <TextView
                          android:id="@+id/pollute_pm10_nr_txt"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:layout_below="@+id/pollute_pm10_txt"
                          android:text="@string/pollute_pm10_keli"
                          android:textColor="@color/white"
                          android:textSize="15sp" />-->

                    <TextView
                        android:id="@+id/progressBar_pm10"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textIsSelectable="true"
                        android:layout_below="@+id/pollute_pm10_nr_txt"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pollute_o3_value_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/progressBar_o3"
                            android:layout_alignBaseline="@+id/pollute_o3_nr_txt"
                            android:layout_alignParentRight="true"
                            android:text="@string/pollute_o3_number"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="μg/m3"
                            android:textSize="10sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pollute_o3_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/pollute_o3"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_pollute_o3_color"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pullent_real_six"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/pollute_o3_six_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_air_quantity"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <!-- <TextView
                         android:id="@+id/pollute_o3_nr_txt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_below="@+id/pollute_o3_txt"

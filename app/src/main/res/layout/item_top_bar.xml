<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/viewfinder_frame"
    android:paddingLeft="10dp"
    android:paddingRight="10dip" >

    <ImageView
        android:id="@+id/show"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/menu_title" />

    <air.chenmh.com.circle.CircleImageView
        android:id="@+id/barBtnLeft"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/show"
        android:gravity="center"
        android:singleLine="true"
        android:src="@drawable/userimage"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/barBtnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/camera"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/barBtnLeft"
        android:text="@string/weilan_tiankong"
        android:textColor="@color/whites"
        android:textSize="18sp" />

</RelativeLayout>